@model LoginViewModel;
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<link href="~/css/login.css" rel="stylesheet" />

@if (Model.EnableLocalLogin)
{
    <div id="app">
        <div class="background">
            <div class="login-form">
                <form asp-controller="AuthLogin" asp-action="Index" method="post">
                    <input id="returnurl" type="hidden" asp-for="ReturnUrl" />

                    <div class="login-logo-div">
                        <img class="login-logo" src="~/logo.png" alt="logo" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Username">用户：</label>
                        <input id="username" class="form-control" asp-for="Username" placeholder="请输入用户名" value="superadmin" type="text" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">密码：</label>
                        <div class="input-group">
                            <input id="password" type="password" class="form-control" asp-for="Password" value="super147" placeholder="请输入密码">
                            <div class="input-icon">
                                <input type="checkbox" class="show-password" id="showPasswordCheckbox">
                                <label for="showPasswordCheckbox" class="show-hidden">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 20 20">
                                        <path fill="currentColor"
                                              d="M3.26 11.602C3.942 8.327 6.793 6 10 6s6.057 2.327 6.74 5.602a.5.5 0 0 0 .98-.204C16.943 7.673 13.693 5 10 5s-6.943 2.673-7.72 6.398a.5.5 0 0 0 .98.204M9.99 8a3.5 3.5 0 1 1 0 7a3.5 3.5 0 0 1 0-7" />
                                    </svg>
                                </label>
                            </div>
                        </div>
                    </div>
                    @if (Model.AllowRememberLogin)
                    {
                        <div class="form-check login-form-remember">
                            <input class="form-check-input" type="checkbox" id="isRemember" asp-for="RememberLogin">
                            <label class="form-check-label" for="isRemember">
                                记住账号
                            </label>
                        </div>
                    }
                    <button class="btn btn-primary  login-form-button" name="button" id="login" value="login">登录</button>
                    <button class="btn btn-secondary  login-form-button" name="button" value="cancel">取消</button>
                    <div class="login-valid ">
                        <partial name="_ValidationSummary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<script src="~/js/login.js"></script>
